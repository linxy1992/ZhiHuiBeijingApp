<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <!--使用重写的ViewPager-->
<com.dailin.view.NoScrollViewPager
    android:id="@+id/vp_content"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
</com.dailin.view.NoScrollViewPager>
    
    <RadioGroup
        android:id="@+id/rg_radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bottom_tab_bg"
        android:gravity="center">

        <RadioButton
            android:id="@+id/btn_home"
            style="@style/Bottom_Tag_Style"
            android:drawableTop="@drawable/tag_home_selector"
            android:text="首页"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/btn_news"
            style="@style/Bottom_Tag_Style"
            android:drawableTop="@drawable/tag_news_selector"
            android:text="新闻" />

        <RadioButton
            android:id="@+id/btn_smart"
            style="@style/Bottom_Tag_Style"
            android:drawableTop="@drawable/tag_smart_selector"
            android:text="智慧服务" />

        <RadioButton
            android:id="@+id/btn_gov"
            style="@style/Bottom_Tag_Style"
            android:drawableTop="@drawable/tag_gov_selector"
            android:text="政务" />

        <RadioButton
            android:id="@+id/btn_setting"
            style="@style/Bottom_Tag_Style"
            android:drawableTop="@drawable/tag_setting_selector"
            android:text="设置" />
    </RadioGroup>
</LinearLayout>